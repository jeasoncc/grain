{
	"$schema": "https://biomejs.dev/schemas/2.3.2/schema.json",
	"files": {
		"ignoreUnknown": false,
		"includes": [
			"**/src/**/*",
			"**/index.html",
			"**/vite.config.js",
			"!**/.vscode/**/*",
			"!**/src/lib/utils.ts",
			"!**/src/routeTree.gen.ts",
			"!**/src/components/ui/**/*",
			"!**/src/styles.css"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}

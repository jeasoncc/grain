{
  "name": "desktop",
  "version": "0.1.599",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc && vite build",
    "build:prod": "tsc && vite build --mode production",
    "build:test": "tsc && vite build --mode development",
    "bundle-analyze": "npx vite-bundle-analyzer",
    "check": "biome check --write",
    "clean:all": "rm -rf node_modules dist .turbo && bun install",
    "complexity:report": "npx plato -r -d complexity-report src",
    "dead-code": "ts-unused-exports tsconfig.json",
    "deps:check": "npx depcheck",
    "deps:update": "npx npm-check-updates -u",
    "dev": "concurrently -n vite,api -c blue,green \"vite\" \"cargo run --manifest-path src-tauri/../../../apps/api-rust/Cargo.toml\"",
    "dev:api": "cargo run --manifest-path ../../apps/api-rust/Cargo.toml",
    "dev:full": "concurrently \"bun run dev:vite\" \"bun run type:check:watch\"",
    "dev:vite": "vite",
    "diff": "git diff --staged > diff.txt",
    "docs:generate": "npx typedoc --out docs src",
    "e2e": "npx tsx e2e/run-e2e.ts",
    "e2e:debug": "npx tsx e2e/run-e2e.ts --debug",
    "e2e:diary": "npx tsx e2e/run-e2e.ts diary",
    "e2e:excalidraw": "npx tsx e2e/run-e2e.ts excalidraw",
    "e2e:ledger": "npx tsx e2e/run-e2e.ts ledger",
    "e2e:wiki": "npx tsx e2e/run-e2e.ts wiki",
    "e2e:workspace": "npx tsx e2e/run-e2e.ts workspace",
    "format": "biome format --write && biome check --write && sort-package-json package.json",
    "format:check": "biome format",
    "health:check": "bun run type:check && bun run lint && bun run test --run",
    "icon:generate": "tauri icon src-tauri/icons/my-new-icon.png",
    "icon:update": "bash ../../scripts/update-icons.sh",
    "lint": "eslint --config eslint.config.grain.js 'src/**/*.{ts,tsx}' --format json | node scripts/categorize-lint-report.js",
    "lint:files": "eslint --config eslint.config.grain.js",
    "lint:hooks": "eslint --config eslint.config.grain.js 'src/hooks/**/*.ts'",
    "lint:views": "eslint --config eslint.config.grain.js 'src/views/**/*.tsx'",
    "lint:pipes": "eslint --config eslint.config.grain.js 'src/pipes/**/*.ts'",
    "lint:flows": "eslint --config eslint.config.grain.js 'src/flows/**/*.ts'",
    "lint:io": "eslint --config eslint.config.grain.js 'src/io/**/*.ts'",
    "lint:grain:report": "eslint --config eslint.config.grain.js 'src/**/*.{ts,tsx}' --format json | node scripts/categorize-lint-report.js",
    "perf:analyze": "npx source-map-explorer 'dist/assets/*.js'",
    "preview": "vite preview",
    "security:audit": "bun audit",
    "tauri": "tauri",
    "test": "vitest --run",
    "test:watch": "vitest",
    "type:check": "tsc --noEmit",
    "type:check:watch": "tsc --noEmit --watch"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@excalidraw/excalidraw": "0.18.0",
    "@grain/editor-core": "workspace:*",
    "@grain/editor-lexical": "workspace:*",
    "@grain/excalidraw-editor": "workspace:*",
    "@lexical/code": "^0.39.0",
    "@lexical/file": "^0.39.0",
    "@lexical/hashtag": "^0.39.0",
    "@lexical/link": "^0.39.0",
    "@lexical/list": "^0.39.0",
    "@lexical/markdown": "^0.39.0",
    "@lexical/overflow": "^0.39.0",
    "@lexical/react": "^0.39.0",
    "@lexical/rich-text": "^0.39.0",
    "@lexical/selection": "^0.39.0",
    "@lexical/table": "^0.39.0",
    "@lexical/text": "^0.39.0",
    "@lexical/utils": "^0.39.0",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",

{
  "name": "@grain/editor-lexical",
  "version": "0.1.0",
  "description": "Grain Lexical Editor - A rich text editor based on Lexical",
  "type": "module",
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    },
    "./document": {
      "import": "./src/document/index.ts",
      "types": "./src/document/index.ts"
    },
    "./code": {
      "import": "./src/code/index.ts",
      "types": "./src/code/index.ts"
    },
    "./diagram": {
      "import": "./src/diagram/index.ts",
      "types": "./src/diagram/index.ts"
    },
    "./styles": "./src/themes/PlaygroundEditorTheme.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "mermaid": "^11.4.1",
    "lucide-react": "^0.562.0"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "@grain/editor-core": "^0.1.0",
    "lexical": "^0.38.0",
    "@lexical/react": "^0.38.0",
    "@lexical/code": "^0.38.0",
    "@lexical/hashtag": "^0.38.0",
    "@lexical/link": "^0.38.0",
    "@lexical/list": "^0.38.0",
    "@lexical/markdown": "^0.38.0",
    "@lexical/overflow": "^0.38.0",
    "@lexical/rich-text": "^0.38.0",
    "@lexical/table": "^0.38.0"
  },
  "devDependencies": {
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^5.0.4",
    "typescript": "~5.8.3",
    "vite": "^7.1.7",
    "vite-plugin-dts": "^4.5.4"
  }
}

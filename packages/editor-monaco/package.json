{
  "name": "@grain/editor-monaco",
  "version": "0.1.0",
  "description": "Grain Monaco Editor - Code and diagram editing based on Monaco Editor",
  "type": "module",
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    },
    "./document": {
      "import": "./src/document/index.ts",
      "types": "./src/document/index.ts"
    },
    "./code": {
      "import": "./src/code/index.ts",
      "types": "./src/code/index.ts"
    },
    "./diagram": {
      "import": "./src/diagram/index.ts",
      "types": "./src/diagram/index.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "clean": "rm -rf dist"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "@grain/editor-core": "^0.1.0",
    "@monaco-editor/react": "^4.7.0",
    "react-resizable-panels": "^2.0.0 || ^3.0.0",
    "lucide-react": "^0.511.0 || ^0.554.0"
  },
  "devDependencies": {
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^5.0.4",
    "typescript": "~5.8.3",
    "vite": "^7.1.7",
    "vite-plugin-dts": "^4.5.4"
  }
}

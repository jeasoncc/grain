{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "target/**", "out/**", ".expo/**"]
    },
    "build:prod": {
      "dependsOn": ["^build:prod"],
      "outputs": ["dist/**", ".next/**", "target/**", "out/**", ".expo/**"],
      "env": ["NODE_ENV"]
    },
    "build:test": {
      "dependsOn": ["^build:test"],
      "outputs": ["dist/**", ".next/**", "target/**", "out/**", ".expo/**"],
      "env": ["NODE_ENV"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "format": {},
    "check": {},
    "clean": {
      "cache": false
    }
  }
}
